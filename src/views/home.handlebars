<script>
  const chainConfig = {
    chainId: "{{ env.NILLION_NILCHAIN_CHAIN_ID }}",
    chainName: "{{ env.NILLION_NILCHAIN_CHAIN_ID }}", 
    rpc: "{{ env.NILLION_NILCHAIN_JSON_RPC }}",
    rest: "{{ env.NILLION_NILCHAIN_REST_API }}",
    bip44: { coinType: 118 },
    bech32Config: {
      bech32PrefixAccAddr: "nillion",
      bech32PrefixAccPub: "nillionpub",
      bech32PrefixValAddr: "nillionvaloper",
      bech32PrefixValPub: "nillionvaloperpub",
      bech32PrefixConsAddr: "nillionvalcons",
      bech32PrefixConsPub: "nillionvalconspub"
    },
    currencies: [
      {
        coinDenom: "NIL",
        coinMinimalDenom: "unil",
        coinDecimals: 6,
        coinGeckoId: "nillion"
      }
    ],
    feeCurrencies: [
      {
        coinDenom: "NIL",
        coinMinimalDenom: "unil",
        coinDecimals: 6,
        coinGeckoId: "nillion",
        gasPriceStep: {
          low: 0.001,
          average: 0.001,
          high: 0.01
        }
      }
    ],
    stakeCurrency: {
      coinDenom: "NIL",
      coinMinimalDenom: "unil",
      coinDecimals: 6,
      coinGeckoId: "nillion"
    }
  };

  console.log(JSON.stringify(chainConfig, null, 4));
  $(document).ready(function () {
    (async function () {
      if (!window.keplr) {
        alert("Please install keplr extension");
      } else {
        console.log(`>> START adding chain`);
        await window.keplr.experimentalSuggestChain(chainConfig);
        console.log(`<< DONE adding chain`);
      }
    })();
  });
</script>
